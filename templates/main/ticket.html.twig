{% extends 'main.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="tickets-list">
{% for item in ticket %}
  <div class="ticket">
    <div>Wydarzenie: <button class="btn" onclick="location.href='{{ path('app_event', {'id': item.events.id}) }}'">{{ item.events.miasto }}</button></div>
    <div>Ilość kupionych biletów: {{ item.iloscbiletow }}</div>
    <div>Kwota: {{ item.iloscbiletow * item.events.cena }}</div>
  </div>
{% endfor %}
</div>
{% endblock %}
